<% if(Articles != null ) { %>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- Articles.name %></li>
      </ol>
    </nav>
    <div class="row">
      <div class="col-12 col-md-4">
        <img src="/uploads/<%- Articles.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- Articles.name %>" loading="lazy">
      </div>
      <div class="col-12 col-md-8">
        <div class="row">
          <div class="col-12"><h1><%- Articles.name %></h1></div>
          <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- Articles.category %></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Article Name</h4>
            <%- Articles.description %>
          </div>
        </div>
        <div class="row pt-4">
          <div class="col-12">
            <h4>Keywords</h4>
            <ul class="list-group list-group-flush">
              <% Articles.keywords.forEach(function(keywords, index){ %>
                <li class="list-group-item"><%= keywords %></li>
              <% }) %>
            </ul> 
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>